<!-- iberia BPEL Process [Generated by the Eclipse BPEL Designer] -->

<bpel:process name="iberia"
         targetNamespace="http://iberia"
         suppressJoinFailure="yes"
         xmlns:ibe="http://iberia"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         >

    <!-- Import the client WSDL -->
	<bpel:import location="iberiaArtifacts.wsdl" namespace="http://iberia"
	        importType="http://schemas.xmlsoap.org/wsdl/" />

    <!-- ================================================================= -->
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->
    <bpel:partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <bpel:partnerLink name="client"
                     partnerLinkType="ibe:iberia"
                     myRole="iberiaProvider"
                     />
    </bpel:partnerLinks>

    <!-- ================================================================= -->
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="ibe:iberiaRequestMessage"/>

        <!--
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="output"
                  messageType="ibe:iberiaResponseMessage"/>
    </bpel:variables>

    <!-- ================================================================= -->
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->
    <bpel:sequence name="main">

        <!-- Receive input from requester.
             Note: This maps to operation defined in iberia.wsdl
             -->
        <bpel:receive name="receiveInput"
                 partnerLink="client"
                 portType="ibe:iberia"
                 operation="flightAvailability"
                 variable="input"
                 createInstance="yes"/>

        <!-- Generate reply to synchronous request -->
        <bpel:assign validate="no" name="Assign">
            <bpel:copy>
                <bpel:from><bpel:literal><ibe:iberiaResponse xmlns:ibe="http://iberia" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
                  <ibe:price>180.0</ibe:price>
                </ibe:iberiaResponse>
                </bpel:literal></bpel:from>
                <bpel:to variable="output" part="payload"></bpel:to>
            </bpel:copy>
        </bpel:assign>
        <bpel:reply name="replyOutput"
               partnerLink="client"
               portType="ibe:iberia"
               operation="flightAvailability"
               variable="output"
               />
    </bpel:sequence>
</bpel:process>
